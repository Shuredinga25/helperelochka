    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Константы игры
            const ROWS = 5;
            const COLS = 6;
            const TOTAL_CELLS = ROWS * COLS;
            const GOLD_COUNT = 4;
            
            // Типы клеток (цикл при клике)
            const CELL_TYPES = [
                'closed',           // 0 - закрытый
                'goldWithBorder',   // 1 - золотой с золотой рамкой
                'goldNoBorder',     // 2 - золотой без золотой рамки
                'normalWithBorder', // 3 - обычный с золотой рамкой
                'normalNoBorder'    // 4 - обычный без золотой рамки
            ];
            
            // Состояние помощника
            let gameBoard = [];
            let openedCount = 0;
            let goldFound = 0;
            let emptyMarkedCount = 0;
            let gameClicks = 0;
            
            // Получение элементов DOM
            const gameBoardElement = document.getElementById('gameBoard');
            const clickCounterElement = document.getElementById('clickCounter');
            const resetButton = document.getElementById('resetButton');
            const openedCountElement = document.getElementById('openedCount');
            const goldFoundElement = document.getElementById('goldFound');
            const emptyCountElement = document.getElementById('emptyCount');
            const bestMoveElement = document.getElementById('bestMove');
            const hintTextElement = document.getElementById('hintText');
            
            // Инициализация помощника
            function initHelper() {
                // Сброс состояния
                gameBoard = [];
                openedCount = 0;
                goldFound = 0;
                emptyMarkedCount = 0;
                gameClicks = 0;
                
                // Обновление UI
                clickCounterElement.textContent = '0';
                openedCountElement.textContent = '0/30';
                goldFoundElement.textContent = '0/4';
                emptyCountElement.textContent = '0';
                bestMoveElement.textContent = '-';
                hintTextElement.textContent = 'Начните с клика по квадрату в центре поля. Он проверяет до 5 квадратов (себя и 4 соседних).';
                
                // Очистка игрового поля
                gameBoardElement.innerHTML = '';
                
                // Создаем игровое поле
                for (let row = 0; row < ROWS; row++) {
                    gameBoard[row] = [];
                    for (let col = 0; col < COLS; col++) {
                        gameBoard[row][col] = {
                            row: row,
                            col: col,
                            type: 'closed', // начальный тип - закрытый
                            typeIndex: 0, // индекс в CELL_TYPES
                            markedEmpty: false // помечен как вероятно пустой
                        };
                        
                        // Создание клетки в DOM
                        createCellElement(row, col);
                    }
                }
                
                // Первоначальное обновление чисел
                updateAllCellNumbers();
                updateBestMove();
            }
            
            // Создание DOM-элемента для клетки
            function createCellElement(row, col) {
                const cell = gameBoard[row][col];
                const cellElement = document.createElement('div');
                cellElement.className = 'cell';
                cellElement.dataset.row = row;
                cellElement.dataset.col = col;
                
                // Обработчик левого клика (смена типа)
                cellElement.addEventListener('click', function(e) {
                    e.preventDefault();
                    handleCellClick(row, col);
                });
                
                // Обработчик правого клика (сброс в закрытый)
                cellElement.addEventListener('contextmenu', function(e) {
                    e.preventDefault();
                    resetCellToClosed(row, col);
                });
                
                gameBoardElement.appendChild(cellElement);
                updateCellDisplay(row, col);
            }
            
            // Расчет количества клеток, которые проверяет данный квадрат
            // includeSelf = true - включая саму клетку, false - только соседей
            function calculateCheckCount(row, col, includeSelf = false) {
                let count = 0;
                const directions = [
                    {dr: -1, dc: 0},  // сверху
                    {dr: 1, dc: 0},   // снизу
                    {dr: 0, dc: -1},  // слева
                    {dr: 0, dc: 1}    // справа
                ];
                
                // Если включаем саму клетку и она закрыта
                if (includeSelf && gameBoard[row][col].type === 'closed') {
                    count++;
                }
                
                for (const dir of directions) {
                    const newRow = row + dir.dr;
                    const newCol = col + dir.dc;
                    
                    // Проверяем, находится ли клетка в пределах поля
                    if (newRow >= 0 && newRow < ROWS && newCol >= 0 && newCol < COLS) {
                        // Проверяем, существует ли клетка в массиве
                        if (gameBoard[newRow] && gameBoard[newRow][newCol]) {
                            // Клетка проверяется, если она закрыта
                            if (gameBoard[newRow][newCol].type === 'closed') {
                                count++;
                            }
                        }
                    }
                }
                
                return count;
            }
            
            // Обновление цвета числа в зависимости от эффективности
            function updateNumberColor(cellElement, checkCount) {
                const numberElement = cellElement.querySelector('.cell-number');
                if (!numberElement) return;
                
                // Устанавливаем цвет в зависимости от количества проверяемых клеток
                if (checkCount >= 5) {
                    numberElement.style.color = '#4CAF50'; // Зеленый
                } else if (checkCount >= 4) {
                    numberElement.style.color = '#8BC34A'; // Светло-зеленый
                } else if (checkCount >= 3) {
                    numberElement.style.color = '#FFD700'; // Золотой
                } else if (checkCount >= 2) {
                    numberElement.style.color = '#FF9800'; // Оранжевый
                } else if (checkCount >= 1) {
                    numberElement.style.color = '#4FC3F7'; // Синий
                } else {
                    numberElement.style.color = '#888'; // Серый
                }
            }
            
            // Обработка клика по клетке (смена типа)
            function handleCellClick(row, col) {
                const cell = gameBoard[row][col];
                const cellElement = document.querySelector(`.cell[data-row="${row}"][data-col="${col}"]`);
                
                // Если клетка помечена как пустая, снимаем метку
                if (cell.markedEmpty) {
                    cell.markedEmpty = false;
                    emptyMarkedCount--;
                }
                
                // Переключаем тип клетки
                const oldType = cell.type;
                const oldTypeIndex = cell.typeIndex;
                
                // Увеличиваем индекс типа (по циклу)
                let newTypeIndex = (oldTypeIndex + 1) % CELL_TYPES.length;
                let newType = CELL_TYPES[newTypeIndex];
                
                // Если переключаем с закрытого на любой другой тип, увеличиваем счетчик кликов
                if (oldType === 'closed' && newType !== 'closed') {
                    gameClicks++;
                    clickCounterElement.textContent = gameClicks;
                }
                // Если переключаем с любого типа на закрытый, уменьшаем счетчик кликов
                else if (oldType !== 'closed' && newType === 'closed') {
                    gameClicks = Math.max(0, gameClicks - 1);
                    clickCounterElement.textContent = gameClicks;
                }
                
                // Обновляем состояние клетки
                cell.typeIndex = newTypeIndex;
                cell.type = newType;
                
                // Обновляем отображение клетки
                updateCellDisplay(row, col);
                
                // Если установлен тип "обычный без золотой рамки" или "золотой без золотой рамки" - помечаем соседей как вероятно пустые
                if (newType === 'normalNoBorder' || newType === 'goldNoBorder') {
                    markNeighborsAsEmpty(row, col);
                }
                
                // Если тип меняется с "обычный без рамки" или "золотой без рамки" на другой тип, 
                // нужно снять метки с соседей, если это были последние такие клетки рядом
                if ((oldType === 'normalNoBorder' || oldType === 'goldNoBorder') && 
                    (newType !== 'normalNoBorder' && newType !== 'goldNoBorder')) {
                    unmarkNeighborsIfNoReason(row, col);
                }
                
                // Обновляем статистику
                updateStatistics();
                
                // Обновляем числа на всех закрытых клетках
                updateAllCellNumbers();
                
                // Обновляем лучший ход
                updateBestMove();
            }
            
            // Сброс клетки в закрытое состояние
            function resetCellToClosed(row, col) {
                const cell = gameBoard[row][col];
                const cellElement = document.querySelector(`.cell[data-row="${row}"][data-col="${col}"]`);
                
                // Если клетка уже закрыта и не помечена как пустая, ничего не делаем
                if (cell.type === 'closed' && !cell.markedEmpty) return;
                
                // Если клетка была открыта (не закрыта), уменьшаем счетчик кликов
                if (cell.type !== 'closed') {
                    gameClicks = Math.max(0, gameClicks - 1);
                    clickCounterElement.textContent = gameClicks;
                }
                
                // Если клетка была помечена как пустая, снимаем метку
                if (cell.markedEmpty) {
                    cell.markedEmpty = false;
                    emptyMarkedCount--;
                }
                
                // Сбрасываем тип клетки
                cell.type = 'closed';
                cell.typeIndex = 0;
                
                // Обновляем отображение клетки
                updateCellDisplay(row, col);
                
                // Если сбрасывается клетка, которая раньше была "без рамки", проверяем соседей
                unmarkNeighborsIfNoReason(row, col);
                
                // Обновляем статистику
                updateStatistics();
                
                // Обновляем числа на всех закрытых клетках
                updateAllCellNumbers();
                
                // Обновляем лучший ход
                updateBestMove();
            }
            
            // Снять метки с соседей, если нет причин их держать
            function unmarkNeighborsIfNoReason(row, col) {
                const directions = [
                    {dr: -1, dc: 0},  // сверху
                    {dr: 1, dc: 0},   // снизу
                    {dr: 0, dc: -1},  // слева
                    {dr: 0, dc: 1}    // справа
                ];
                
                for (const dir of directions) {
                    const newRow = row + dir.dr;
                    const newCol = col + dir.dc;
                    
                    // Проверяем, находится ли клетка в пределах поля
                    if (newRow >= 0 && newRow < ROWS && newCol >= 0 && newCol < COLS) {
                        const neighborCell = gameBoard[newRow][newCol];
                        
                        // Проверяем, помечена ли клетка как пустая
                        if (neighborCell.markedEmpty) {
                            // Проверяем, есть ли другие клетки "без рамки" рядом с этой клеткой
                            let hasReasonToStayMarked = false;
                            
                            // Проверяем всех соседей этой клетки
                            const neighborDirections = [
                                {dr: -1, dc: 0}, {dr: 1, dc: 0}, {dr: 0, dc: -1}, {dr: 0, dc: 1}
                            ];
                            
                            for (const ndir of neighborDirections) {
                                const checkRow = newRow + ndir.dr;
                                const checkCol = newCol + ndir.dc;
                                
                                if (checkRow >= 0 && checkRow < ROWS && checkCol >= 0 && checkCol < COLS) {
                                    const checkCell = gameBoard[checkRow][checkCol];
                                    // Если рядом есть клетка "без рамки", то метку оставляем
                                    if (checkCell.type === 'normalNoBorder' || checkCell.type === 'goldNoBorder') {
                                        hasReasonToStayMarked = true;
                                        break;
                                    }
                                }
                            }
                            
                            // Если нет причин оставаться помеченной, снимаем метку
                            if (!hasReasonToStayMarked) {
                                neighborCell.markedEmpty = false;
                                emptyMarkedCount--;
                                updateCellDisplay(newRow, newCol);
                            }
                        }
                    }
                }
            }
            
            // Обновление отображения клетки
            function updateCellDisplay(row, col) {
                const cell = gameBoard[row][col];
                const cellElement = document.querySelector(`.cell[data-row="${row}"][data-col="${col}"]`);
                if (!cellElement) return;
                
                // Очищаем все классы и содержимое
                cellElement.className = 'cell';
                cellElement.innerHTML = '';
                
                if (cell.type === 'closed') {
                    // Закрытая клетка
                    cellElement.classList.add('closed');
                    
                    // Если помечена как пустая
                    if (cell.markedEmpty) {
                        cellElement.classList.add('marked-empty');
                    }
                    
                    // Добавляем только цифру
                    const checkCount = calculateCheckCount(row, col, true);
                    const numberElement = document.createElement('div');
                    numberElement.className = 'cell-number';
                    numberElement.textContent = checkCount;
                    cellElement.appendChild(numberElement);
                    
                    updateNumberColor(cellElement, checkCount);
                } else {
                    // Открытая клетка
                    cellElement.classList.add('opened');
                    
                    // Устанавливаем рамку в зависимости от типа
                    if (cell.type === 'goldWithBorder' || cell.type === 'normalWithBorder') {
                        cellElement.classList.add('border-gold');
                    } else {
                        cellElement.classList.add('border-normal');
                    }
                    
                    // Добавляем звезду для золотых клеток
                    if (cell.type === 'goldWithBorder' || cell.type === 'goldNoBorder') {
                        cellElement.classList.add('gold');
                    }
                    
                    // Для открытых клеток не добавляем текст
                }
            }
            
            // Пометить соседние клетки как вероятно пустые
            function markNeighborsAsEmpty(row, col) {
                const directions = [
                    {dr: -1, dc: 0},  // сверху
                    {dr: 1, dc: 0},   // снизу
                    {dr: 0, dc: -1},  // слева
                    {dr: 0, dc: 1}    // справа
                ];
                
                for (const dir of directions) {
                    const newRow = row + dir.dr;
                    const newCol = col + dir.dc;
                    
                    // Проверяем, находится ли клетка в пределах поля
                    if (newRow >= 0 && newRow < ROWS && newCol >= 0 && newCol < COLS) {
                        const cell = gameBoard[newRow][newCol];
                        // Помечаем как пустую только если она закрыта и еще не помечена
                        if (cell.type === 'closed' && !cell.markedEmpty) {
                            cell.markedEmpty = true;
                            emptyMarkedCount++;
                            updateCellDisplay(newRow, newCol);
                        }
                    }
                }
            }
            
            // Обновление статистики
            function updateStatistics() {
                openedCount = 0;
                goldFound = 0;
                emptyMarkedCount = 0;
                
                for (let row = 0; row < ROWS; row++) {
                    for (let col = 0; col < COLS; col++) {
                        const cell = gameBoard[row][col];
                        
                        if (cell.markedEmpty && cell.type === 'closed') {
                            emptyMarkedCount++;
                        }
                        
                        if (cell.type !== 'closed') {
                            openedCount++;
                            
                            if (cell.type === 'goldWithBorder' || cell.type === 'goldNoBorder') {
                                goldFound++;
                            }
                        }
                    }
                }
                
                // Обновляем UI
                openedCountElement.textContent = `${openedCount}/${TOTAL_CELLS}`;
                goldFoundElement.textContent = `${goldFound}/${GOLD_COUNT}`;
                emptyCountElement.textContent = emptyMarkedCount;
                
                // Проверяем завершение игры
                if (goldFound >= GOLD_COUNT) {
                    hintTextElement.textContent = 'Поздравляем! Вы нашли все золотые квадраты!';
                    bestMoveElement.textContent = 'Игра завершена!';
                }
            }
            
            // Обновление лучшего хода
            function updateBestMove() {
                let bestCount = -1;
                let bestPosition = null;
                
                for (let row = 0; row < ROWS; row++) {
                    for (let col = 0; col < COLS; col++) {
                        const cell = gameBoard[row][col];
                        
                        // Рассматриваем только закрытые клетки (даже помеченные как пустые)
                        if (cell.type === 'closed') {
                            const checkCount = calculateCheckCount(row, col, true);
                            if (checkCount > bestCount) {
                                bestCount = checkCount;
                                bestPosition = {row, col};
                            }
                        }
                    }
                }
                
                if (bestPosition) {
                    bestMoveElement.textContent = `(${bestPosition.row+1}, ${bestPosition.col+1}) - ${bestCount} кл.`;
                    
                    // Обновляем подсказку
                    const cell = gameBoard[bestPosition.row][bestPosition.col];
                    const markedText = cell.markedEmpty ? " (вероятно пустой)" : "";
                    
                    if (bestCount === 0) {
                        hintTextElement.textContent = 'Все клетки проверены. Откройте оставшиеся квадраты.';
                    } else if (bestCount >= 5) {
                        hintTextElement.textContent = `Квадрат (${bestPosition.row+1}, ${bestPosition.col+1})${markedText} проверяет ${bestCount} квадратов - отличный выбор!`;
                    } else if (bestCount >= 3) {
                        hintTextElement.textContent = `Квадрат (${bestPosition.row+1}, ${bestPosition.col+1})${markedText} проверяет ${bestCount} квадратов.`;
                    } else {
                        hintTextElement.textContent = `Квадрат (${bestPosition.row+1}, ${bestPosition.col+1})${markedText} проверяет ${bestCount} квадратов. Попробуйте найти лучший вариант.`;
                    }
                } else {
                    bestMoveElement.textContent = '-';
                    hintTextElement.textContent = 'Все клетки проверены. Откройте оставшиеся квадраты.';
                }
            }
            
            // Обновление чисел на всех клетках
            function updateAllCellNumbers() {
                for (let row = 0; row < ROWS; row++) {
                    for (let col = 0; col < COLS; col++) {
                        const cell = gameBoard[row][col];
                        const cellElement = document.querySelector(`.cell[data-row="${row}"][data-col="${col}"]`);
                        
                        if (cellElement && cell.type === 'closed') {
                            const checkCount = calculateCheckCount(row, col, true);
                            const numberElement = cellElement.querySelector('.cell-number');
                            if (numberElement) {
                                numberElement.textContent = checkCount;
                                updateNumberColor(cellElement, checkCount);
                            }
                        }
                    }
                }
            }
            
            // Настройка обработчиков событий
            resetButton.addEventListener('click', initHelper);
            
            // Инициализация помощника
            initHelper();
        });
    </script>
</body>
</html>
